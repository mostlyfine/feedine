!!!
%html
  %head
    %meta{:charset => 'utf-8'}
    %meta{:name => 'viewport', :content => 'width=device-width', 'initial-scale' => 1}
    %title= 'Feedine ' + (feed[:title] rescue '')
    = javascript_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js'
    = javascript_tag '/javascripts/jquery.watermark.min.js'
    = stylesheet_link_tag '/stylesheets/main-16px.css', :media => 'all'
    :javascript
      $(function() {
        $('#rssurl').watermark('変換したいRSSを入力してください');
        $('.btn').click(function() {
          $('#rssform').attr('action', '/rss.' + this.value).submit();
          return false;
        });
      });
  %body
    = yield
