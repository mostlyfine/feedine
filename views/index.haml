%header
  %h1
    Feedine

%form#rssform{:action => '/rss.html'}
  %input#rssurl{:type => 'text', :name => 'url', :size => 50}
  %input.btn{:type => 'button', :value => 'html'}
  %input.btn{:type => 'button', :value => 'ics'}
  %input.btn{:type => 'button', :value => 'kml'}
  %input.btn{:type => 'button', :value => 'json'}

- {abc:'青山ブックセンター', plusone:'ロフトプラスワン', eplus:'e+'}.each do |key,value|
  %article
    %h2= value
    %p
    - %w(html atom ics kml json).each do |ext|
      = link_to image_tag("/images/#{ext}.gif"), "/#{key}.#{ext}"
    = link_to image_tag("https://www.google.com/calendar/images/calendar_plus_ja.gif"), "https://www.google.com/calendar/render?cid=#{request.base_url}/#{key}.ics"
